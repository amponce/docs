      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "API Reference",
          "href": "/api-reference/overview",
          "icon": "rectangle-terminal"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/relay-agent",
          "icon": "github"
        },
        {
          "anchor": "Community",
          "href": "https://discord.gg/relayagent",
          "icon": "discord"
        }
      ]
    }
  },
  "openapi": "openapi.yaml",
  "api": {
    "baseUrl": "https://api.relayagent.com",
    "auth": {
      "method": "bearer",
      "name": "Authorization"
    },
    "playground": {
      "mode": "simple"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "claude",
      "chatgpt",
      "cursor",
      "mcp"
    ]
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  },
  "search": {
    "prompt": "Search Relay Agent docs..."
  },
  "footer": {
    "socials": {
      "github": "https://github.com/relay-agent",
      "discord": "https://discord.gg/relayagent",
      "x": "https://x.com/relayagent",
      "linkedin": "https://linkedin.com/company/relay-agent"
    }
  }
}
