{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Relay Agent",
  "colors": {
    "primary": "#22d3ee",
    "light": "#67e8f9",
    "dark": "#0891b2",
    "background": {
      "dark": "#0a0a0f",
      "light": "#ffffff"
    }
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://console.relayagent.com"
      },
      {
        "label": "Status",
        "href": "https://status.relayagent.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://console.relayagent.com/api-keys"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "get-started/quickstart",
              "get-started/authentication",
              "get-started/sdks",
              "get-started/concepts"
            ]
          },
          {
            "group": "Build Your Agent",
            "pages": [
              "build/agent-configuration",
              "build/system-prompts",
              "build/models",
              "build/voices",
              "build/transcription",
              "build/tools",
              "build/transfer-calls",
              "build/agent-transfers",
              "build/knowledge-bases",
              "build/file-upload",
              "build/compositions",
              "build/turn-detection",
              "build/memory",
              "build/post-call-analysis"
            ]
          },
          {
            "group": "Deploy",
            "pages": [
              "deploy/phone-calls",
              "deploy/inbound-calls",
              "deploy/web-calls",
              "deploy/phone-numbers",
              "deploy/campaigns",
              "deploy/webhooks",
              "deploy/webhook-security"
            ]
          },
          {
            "group": "Monitor & Optimize",
            "pages": [
              "monitor/call-history",
              "monitor/devtools",
              "monitor/usage",
              "monitor/ab-testing",
              "monitor/latency"
            ]
          },
          {
            "group": "Admin Console",
            "pages": [
              "console/workspace",
              "console/team-members",
              "console/api-keys",
              "console/profile"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/overview"
            ]
          },
          {
            "group": "Agents",
            "pages": [
              "api-reference/agents/create",
              "api-reference/agents/list",
              "api-reference/agents/get",
              "api-reference/agents/update",
              "api-reference/agents/delete",
              "api-reference/agents/publish",
              "api-reference/agents/unpublish",
